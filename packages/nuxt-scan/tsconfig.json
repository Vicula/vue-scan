{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2020",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "#app": ["./src/runtime/nuxt-imports.d.ts"],
      "vue-scan": ["../vue-scan/dist/index.d.ts"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
